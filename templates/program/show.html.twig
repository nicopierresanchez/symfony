{% extends "base.html.twig" %}


{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}

	<div class="media">

		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster" style="width : 20rem; margin-top: 1rem">

		<div class="media-body">

			<h1 class="mt-0">{{ program.title }}</h1>

			<p style="max-width : 40rem; text-align: center; margin: auto;">{{ program.summary }}</p>

			<p>Catégorie :<strong>
					{{ program.category.name }}</strong>
			</p>

		</div>

	</div>
	
		{% for seasonNumber in seasonNumbers %}
		<div class="select-container">
		<div class="select">

			<a  href="/program/{{ program.id }}/season/{{ seasonNumber.Id }}">saison {{ seasonNumber.Id }} </a>
			{#<a class="select" href="{{ path("program_show_Season",{ "program": program.id , "season": seasonNumber.Id  })}}">saison {{ seasonNumber.Id }} </a>#}

		</div>
		</div>

	{% else %}

		Aucune saison trouvée.

	{% endfor %}

	<pre></pre>


	<a href="{{ path('program_index') }}">

		Retour à la liste des programmes

	</a>

{% endblock %}
