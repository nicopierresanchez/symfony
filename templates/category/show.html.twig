{% extends "base.html.twig" %}


{% block title %}Categorie
{% endblock %}

   

{% block body %}

	<div class="row" style="margin:.0.5rem;width:100%;">
		{% for categoryProgram in categoryPrograms %}


			<div class="col-sm-3" style="margin:auto;">

				<div class="card text-white bg-dark card" style="width: 27.1rem;height: 58rem;margin-bottom:1.5rem;margin-top:0.5rem;">
					<img src="{{categoryProgram.poster}}" class="card-img-top" alt="{{ categoryProgram.title }}" style="width: 27rem;height: 40rem;">
					<div class="card-body" style="display: flex;flex-direction: column;">


						<h5 class="card-title"style="text-align:center;">{{ categoryProgram.title }}</h5>
						<strong>
							<h6 class="card-title">{{ categoryProgram.category.name }}</h6>
						</strong>

						<p class="card-text">{{ categoryProgram.summary|striptags|length > 300 ? categoryProgram.summary|striptags|slice(0, 300) ~ '...' : categoryProgram.summary|striptags }}</p>
						<a href="{{ path("program_show", { id: categoryProgram.id }) }}" class="btn btn-primary" style="margin-top:auto;">Voir la fiche</a>
					</div>
				</div>
			</div>

		{% else %}

		<p style="width : 90%; text-align: center; margin: auto;font-size: 1.5rem;color:white;">Aucune saison trouvée.</p>

		{% endfor %}

	<pre></pre>


	<a href="{{ path('program_index') }}"style="margin-top: 4rem;
												height:3.4rem;
												font-size: 1.5rem;
												color: black;
												margin-bottom: 2rem;
												margin-left:auto;
												margin-right:auto;
												text-decoration: none;
												padding: 0.5rem 1rem 0.5rem 1rem;
												border-radius: 10px;
												width:28rem;
												background: black;
												color:white;
                                                text-align:center;">

		Retour à la liste des programmes

	</a>
	</div>
{% endblock %}
